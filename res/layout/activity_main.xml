          />
       <Button
          android:id="@+id/navBtn2"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:padding="16dp"
          />
       <Button
          android:id="@+id/navBtn3"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:padding="16dp"
          />
       <Button
          android:id="@+id/navBtn4"
